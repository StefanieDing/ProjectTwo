<div class = "row">
  <div class="mainDiv">
    <div class="mainOptionWin">
    <p class="center-align">Create an Event</p>
      <form class="" action="/create/manager" method="POST">

        <div class="form-group">
          <label for="evnt">Event Name:</label>
          <input type="text" id="evnt" name="name" class="validate">
        </div>

        <div class="form-group">
          <label for="dayte">Date:</label>
          <input type="date" id="dayte" name="date" class="validate">
        </div>  

        <div class="form-group">
          <label for="startTime">Start time:</label>
          <input type="time" id="startTime" name="startTime" class="validate">
        </div>

        <div class="form-group">
          <label for="endTime">End Time:</label>
          <input type="time" id="endTime" name="endTime" class="validate">
        </div>

        <div class="form-group">
          <label for="location">Location:</label>
          <input type="text" id="location" name="location" class="validate">
        </div>

        <div class="form-group">
          <label for="availSpot">Available Spot:</label>
          <input type="number" min="1" max="100" id="availSpot" name="availableSpots" class="validate">
        </div>  
        
        <a class="waves-effect waves-light btn-large red accent-4 ">Add Event</a>
      </form>

    </div>
  </div>
</div>